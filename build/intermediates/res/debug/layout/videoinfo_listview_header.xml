<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_videoinfo_text"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:background="@color/transparent"
   >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_toRightOf="@+id/imageView"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_height="60dp">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:text="纽约最赞的十个店面"
        android:textColor="#2D3132"
        android:textSize="17sp"
        android:layout_alignParentTop="true"

       />
    <TextView
        android:id="@+id/tv_videoinfo_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_alignLeft="@id/tv_title"
        android:gravity="top"
        android:text="上传者：量子频道"
        android:textColor="#969A98"
        android:textSize="12sp" />
</LinearLayout>



        <TextView
            android:id="@+id/tv_videoinfo_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"
            android:paddingTop="6dp"
            android:visibility="gone"
            android:text="#商业/4&apos;20"
            android:textColor="@color/white"
            android:textSize="12sp" />



    <ImageView
        android:padding="5dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="right"
        android:src="@drawable/headtest"
        android:id="@+id/imageView"
        android:layout_below="@+id/tv_videoinfo_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="10dp"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:text="      在纽约，一个当地的美国朋友给我推荐去一家比萨店“Di Fara Pizza“，此店多次被评为纽约最好比萨店，全手工制作。纽约时报称它是“一个在纽约市最负盛名的非常抢手的比萨饼店”。 纽约每日新闻的读者把它评为纽约第一比萨。旅游指导书也称它是纽约市最佳手制披萨。"
        android:textColor="#545859"
        android:textSize="16sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论(345)"
        android:textSize="16sp"
        android:paddingLeft="6dp"
        android:textColor="#969A98"
        android:layout_below="@+id/tv_info"

        />
</RelativeLayout>
