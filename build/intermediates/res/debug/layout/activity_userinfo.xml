             <LinearLayout
                 android:layout_marginTop="5dp"
            android:id="@+id/ll_user_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/im_user_dead"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/headtest"
                app:border_width="2dp"
                app:border_color="@color/gray"
                />

            <TextView
                android:id="@+id/tv_user_nike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bradley"
                android:maxEms="6"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="16sp" />
                 <TextView
                     android:id="@+id/tv_place_id"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:background="@color/red_bg"
                     android:gravity="center"
                     android:text="海外，美国"
                     android:textColor="@color/white"
                     android:paddingBottom="8dp"
                     android:textSize="11sp" />

        </LinearLayout> 
              


    </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red_bg"
            android:id="@+id/ll_concerned"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            >
            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/tv_user_concerned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2345"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/white"
                android:layout_marginRight="3dp"
                android:textSize="18sp" />

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/tv_user_concerned"
                />



                <ImageView
                    android:id="@+id/bt_user_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/follow"
                    />

                <TextView
                    android:id="@+id/tv_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粉丝"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="3dp"
                    android:textStyle="bold"
                    android:layout_marginRight="30dp"
                    android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_user_fens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_fans"
                android:text="2345"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>

