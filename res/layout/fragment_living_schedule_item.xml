<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:padding="2dp"
    android:layout_height="180dp">

    <LinearLayout
        android:id="@+id/lv_linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="vertical" >

            <ImageView
                android:id="@+id/video_pic"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/white" />
        </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_bg"
        android:layout_alignParentBottom="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/video_schedule_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="鸡尾酒沙龙谁知道呢"
            android:maxEms="8"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="left"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="14sp"

            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            >
                      <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/living_schedule_head"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/headtest"
                android:padding="3dp"
                app:border_width="1dp"
                app:border_color="@color/transparent"/>
            <TextView
            android:id="@+id/tv_living_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19:50" android:padding="1dp"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
                android:background="@color/red"
            />
            <TextView
                android:id="@+id/tv_living_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15/23"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:paddingRight="6dp"
                android:layout_toLeftOf="@+id/tv_living_time"
                android:layout_toStartOf="@+id/tv_living_time"
                 />
            <TextView
                android:id="@+id/video_schedule_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="哦哦哦诗人ewrwerwer"
                android:maxEms="6"
                android:singleLine="true"
               android:ellipsize="end"
               android:layout_toRightOf="@+id/living_schedule_head"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直播前五分钟推送提醒"
                android:textSize="10sp"
                android:visibility="gone"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

    </LinearLayout>



    <RelativeLayout
        android:id="@+id/rl_sunscribe"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icon_ulooked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/unsubscribe_middle"
            />
        <TextView
            android:id="@+id/tv_concerned_count_ulook"
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:text="1"
            android:gravity="left"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_alignBottom="@+id/icon_ulooked"
            android:layout_alignRight="@+id/icon_ulooked"
             />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_mlive_sign"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/icon_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/state_eight"
        />
    <TextView
        android:id="@+id/tv_concerned_count_live"
        android:layout_width="37dp"
        android:layout_height="23dp"
        android:text="1"
        android:gravity="left"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/icon_circle"
        android:layout_alignRight="@+id/icon_circle"
        android:layout_alignEnd="@+id/icon_circle" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_living_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon_living"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_living_sign"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_concerned_count_living"
            android:layout_width="36dp"
            android:layout_height="18dp"
            android:text="1"
            android:gravity="left"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_alignBottom="@+id/icon_living"
            android:layout_alignRight="@+id/icon_living"
            android:layout_alignEnd="@+id/icon_living" />
    </RelativeLayout>

</RelativeLayout>
